

#include <stdio.h>
#include <Windows.h>
#include <iostream>
#include <string>
#include <Windows.h>
#include <fstream>


using namespace std;

int main() {
	SetConsoleCP(1251);             
	SetConsoleOutputCP(1251);   
	char phras[20];
	ifstream file("input.txt");
	if (!file.is_open())
		cout << "Error! File is not found! " << endl;
	else {

	}

	
	
	file.getline(phras, 20);
	file.close();
	int i = 0;
	for (i; i < 20; i++) {
		if (phras[i] == ' ' || phras [i-1] == 'ь' || phras [i-2] == 'т') {
			phras[i - 1] = 'я';
			phras[i - 2] = 'с';
		}
	}
	ofstream textFile;
	textFile.open("output.txt");
	textFile << phras;
	textFile.close();
	system("pause");
	return 0;
}
