
/* 
Превести дюймы в метры и выразить в аршинах.
 































#include "pch.h"
#include <stdio.h>
#include <Windows.h>
#include <iostream>
#include <string>

using namespace std;

int main() {
	int size,sum;
	sum = 0;
	cout << "Enter size of array ";
	cin >> size;
	int *numbers = new int[size];

	for (int i = 0; i < size; i++) {
		cin >> numbers[i];
		if (numbers[i] > 0) {
			sum = sum + numbers[i];
		}
	}
	cout << endl << "ur array:" << endl;
	for (int i = 0; i < size; i++) {
		cout << numbers[i] << "\t";
	}
	cout << endl << "ur sum of possitive elements of array: " << sum;
	return 0;
}








#include <stdio.h>



#include <iostream>

#include <string>






using namespace std;

int main(){

          

	char phrases[100];
	char words[10][10];

	cin.get(phrases,100);
	int i,t = 0;
	for(i=0;i<200;i++){
		words[t][i]=phrases[i];
		if(phrases[i] == ' '||'?'|| '.'|| ','|| '!'|| '/'){
			if(words[t][i] == 't' && words[t][i-1] == 'a'){
				words[t][i] == 'x';
				words[t][i-1] == 'z';
			}
			t++;
		}
	}
	for (i=0;i<10,i++){
		for (t=0;t<10;t++){
			cout << words[t][i];
		}
	}

















	system("pause");
	return 0;
}
