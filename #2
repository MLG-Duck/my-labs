#include "pch.h"
#include <stdio.h>
#include <Windows.h>
#include <iostream>
#include <string>

using namespace std;

int main() {
	int size,sum;
	sum = 0;
	cout << "Enter size of array ";
	cin >> size;
	int *numbers = new int[size];

	for (int i = 0; i < size; i++) {
		cin >> numbers[i];
		if (numbers[i] > 0) {
			sum = sum + numbers[i];
		}
	}
	cout << endl << "ur array:" << endl;
	for (int i = 0; i < size; i++) {
		cout << numbers[i] << "\t";
	}
	cout << endl << "ur sum of possitive elements of array: " << sum;
	return 0;
}
