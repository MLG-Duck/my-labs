#include "pch.h"
#include <iostream>
#include <Windows.h> *\ ДЛЯ РАШН ЛЕНГУАГЕ



using namespace std;

int main()
{
	SetConsoleCP(1251);              *\ ДЛЯ РАШН ЛЕНГУАГЕ
	SetConsoleOutputCP(1251);           *\ ДЛЯ РАШН ЛЕНГУАГЕ
	char mas[20];
	
	cin.get(mas, 20);      *\СЧИТЫВАЕМ ПРОБЕЛЫ 

	cout << endl;

	for (int i = 0; i < 20; i++) {
		if ((mas[i] == 'т') && (mas[i + 1] == 'ь')) {
			mas[i] = 'с';
			mas[i + 1] = 'я';
		}
	}
	
	cout << mas;     *\ ДА, ТАК ТОЖЕ МОЖНО
	
	cout << endl;

	return 0;
}
