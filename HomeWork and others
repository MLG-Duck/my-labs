#include "pch.h"

#include <stdio.h>

#include <Windows.h>

#include <iostream>

#include <string>





using namespace std;



int main() {
	int n,i,t,frst,last;
	char zam;
	cin >> n;
	char *words = new char[n];
	t = 1;

	for (i = 0; i < n; i++) {
		cin >> words[i];
	}

	for (i = 0; i < n; i++) {
		for (t = 0; words(i) == " ";) {
			i = frst;
			if (words(i + t) == " ") {
				last = i;
				words[i] = zam;
				words(frst) = words(last);
				words(last) = zam;
				t = 0;
			}
		}
		t = 0;
	}

	for (i = 0; i < n; i++) {
		cout << endl << words[i];
	}


	return 0;

}


Заменя первой и последней буков местами
